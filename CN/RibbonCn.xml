    <Application.Views>
        <Ribbon>
            <Ribbon.ApplicationMenu>
                <ApplicationMenu CommandName="cmdFileMenu">
                    <ApplicationMenu.RecentItems>
                        <RecentItems CommandName="cmdMRUList" MaxCount="10" />
                    </ApplicationMenu.RecentItems>
                    <MenuGroup Class="MajorItems">
                        <Button CommandName="cmdFileOpen" />
                        <Button CommandName="cmdFileOpenGame" />
                        <Button CommandName="cmdFileOpenOnline" />
                        <Button CommandName="cmdFileClose" />
                    </MenuGroup>
                    <MenuGroup Class="MajorItems">
                        <Button CommandName="cmdAbout" />
                    </MenuGroup>
                    <MenuGroup Class="MajorItems">
                        <Button CommandName="cmdExit" />
                    </MenuGroup>
                </ApplicationMenu>
            </Ribbon.ApplicationMenu>
            <Ribbon.Tabs>

                <Tab CommandName="cmdTabOperations">
                    <Tab.ScalingPolicy>
                        <ScalingPolicy>
                            <!-- This describes the maximum size of each group in the tab. -->
                            <ScalingPolicy.IdealSizes>
                                <Scale Group="cmdGroupOps1" Size="Large" />
                                <Scale Group="cmdGroupOps2" Size="Large" />
                                <Scale Group="cmdGroupOps3" Size="Large" />
                            </ScalingPolicy.IdealSizes>

                            <!-- This describes the order and how the groups shrink when the window is resized. -->
                            <Scale Group="cmdGroupOps1" Size="Popup" />
                            <Scale Group="cmdGroupOps2" Size="Popup" />
                            <Scale Group="cmdGroupOps3" Size="Popup" />
                        </ScalingPolicy>

                    </Tab.ScalingPolicy>

                    <Group CommandName="cmdGroupOps1" SizeDefinition="FourButtons">
                        <Button CommandName="cmdFileOpen" />
                        <Button CommandName="cmdFileOpenGame" />
                        <Button CommandName="cmdFileOpenOnline" />
                        <Button CommandName="cmdFileClose" />
                    </Group>
                    <Group CommandName="cmdGroupOps2" SizeDefinition="TwoButtons">
                        <Button CommandName="cmdOpsOpen" />
                        <Button CommandName="cmdOpsOpenWith" />
                    </Group>
                    <Group CommandName="cmdGroupOps3" SizeDefinition="FiveButtons">
                        <Button CommandName="cmdOpsView" />
                        <Button CommandName="cmdOpsExtract" />
                        <Button CommandName="cmdOpsTagFilter" />
                        <Button CommandName="cmdOpsCopyName" />
                        <Button CommandName="cmdOpsProperties" />
                    </Group>
                </Tab>

                <Tab CommandName="cmdTabView">
                    <Tab.ScalingPolicy>
                        <ScalingPolicy>
                            <ScalingPolicy.IdealSizes>
                                <!-- This describes the maximum size of each group in the tab. -->
                                <Scale Group="cmdGroupView1" Size="Large" />
                                <Scale Group="cmdGroupView2" Size="Large" />
                                <Scale Group="cmdGroupView3" Size="Large" />
                            </ScalingPolicy.IdealSizes>
                            <!-- This describes the order and how the groups shrink when the window is resized. -->
                            <Scale Group="cmdGroupView1" Size="Popup" />
                            <Scale Group="cmdGroupView2" Size="Popup" />
                            <Scale Group="cmdGroupView3" Size="Popup" />
                        </ScalingPolicy>
                    </Tab.ScalingPolicy>

                    <Group CommandName="cmdGroupView1" SizeDefinition="FiveButtons">
                        <ToggleButton CommandName="cmdViewTiles" />
                        <ToggleButton CommandName="cmdViewIcons" />
                        <ToggleButton CommandName="cmdViewSmallIcons" />
                        <ToggleButton CommandName="cmdViewList" />
                        <ToggleButton CommandName="cmdViewDetails" />
                    </Group>

                    <Group CommandName="cmdGroupView2">
                        <SizeDefinition>
                            <ControlNameMap>
                                <ControlNameDefinition Name="combobox"/>
                                <ControlNameDefinition Name="checkbox"/>
                            </ControlNameMap>
                            <GroupSizeDefinition Size="Large">
                                <ControlSizeDefinition ControlName="combobox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                                <ControlSizeDefinition ControlName="checkbox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Medium">
                                <ControlSizeDefinition ControlName="combobox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                                <ControlSizeDefinition ControlName="checkbox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Small">
                                <ControlSizeDefinition ControlName="checkbox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                                <ControlSizeDefinition ControlName="combobox" ImageSize="Small" IsImageVisible="false" IsLabelVisible="true"/>
                            </GroupSizeDefinition>
                        </SizeDefinition>
                        <ComboBox CommandName="cmdFileMask" IsEditable="true" />
                        <CheckBox CommandName="cmdLocalFilesOnly"/>
                    </Group>

                    <Group CommandName="cmdGroupView3" SizeDefinition="OneButton">
                        <Button CommandName="cmdViewClassicMenu" />
                    </Group>
                </Tab>

                <Tab CommandName="cmdTabTools">
                    <Tab.ScalingPolicy>
                        <ScalingPolicy>
                            <ScalingPolicy.IdealSizes>
                                <!-- This describes the maximum size of each group in the tab. -->
                                <Scale Group="cmdGroupTools1" Size="Large" />
                            </ScalingPolicy.IdealSizes>
                            <!-- This describes the order and how the groups shrink when the window is resized. -->
                            <Scale Group="cmdGroupTools1" Size="Popup" />
                        </ScalingPolicy>
                    </Tab.ScalingPolicy>

                    <Group CommandName="cmdGroupTools1" SizeDefinition="FiveButtons">
                        <Button CommandName="cmdToolsSearchFiles" />
                        <Button CommandName="cmdToolsMergeListfiles" />
                        <Button CommandName="cmdToolsExportListfile" />
                        <Button CommandName="cmdToolsViewInstall" />
                        <Button CommandName="cmdToolsOptions" />
                    </Group>
                </Tab>

                <Tab CommandName="cmdTabHelp">
                    <Tab.ScalingPolicy>
                        <ScalingPolicy>
                            <ScalingPolicy.IdealSizes>
                                <!-- This describes the maximum size of each group in the tab. -->
                                <Scale Group="cmdGroupHelp" Size="Large" />
                            </ScalingPolicy.IdealSizes>
                            <!-- This describes the order and how the groups shrink when the window is resized. -->
                            <Scale Group="cmdGroupHelp" Size="Popup" />
                        </ScalingPolicy>
                    </Tab.ScalingPolicy>

                    <Group CommandName="cmdGroupHelp" SizeDefinition="TwoButtons">
                      <Button CommandName="cmdCmdLine" />
                      <Button CommandName="cmdAbout" />
                    </Group>
                </Tab>

